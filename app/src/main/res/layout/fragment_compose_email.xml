<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/from_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/from_email" />
    <EditText
        android:id="@+id/to_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_email"/>
    <EditText
        android:id="@+id/beverage_item_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/beverage_item_information_hint"/>
    <EditText
        android:id="@+id/body_of_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>